extends ../layout/common
block content
	if errors
		each error in errors
			.alert.alert-danger= error
	
	h1 Login
	form(action='/auth/login' method = 'POST')
		.form-group
			label Email
			input.form-control(name='email' type='text' value = values ? values.email : '')
			label Password
			input.form-control(name='password' type='password' value = values ? values.password : '')
			button.btn.btn-primary.mt-2 Login