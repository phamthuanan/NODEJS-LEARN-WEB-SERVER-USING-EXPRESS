extends ../layout/common
block content
	if errors
		each error in errors
			.alert.alert-danger= error
	
	h1 Create user
	form(action='/user/create' method = 'POST')
		.form-group
			label Name User
			input.form-control(name='name' type='text' value = values ? values.name : '')
			label Phone
			input.form-control(name='phone' type='text' value = values ? values.phone : '')
			button.btn.btn-primary.mt-2 Create